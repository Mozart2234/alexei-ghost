{{!-- main-menu --}}
<div class="MainMenu">
  <div class="MainMenu-social">
    <div class="SocialLinks">
      {{> social-links}}
    </div>
  </div>
  <div class="MainMenu-logo">
    <a href="{{@blog.url}}">
      {{#if @blog.logo}}
        <img src="{{@blog.logo}}" alt="" class="MainMenu-imgLogo">
      {{else}}
        <h1>{{@blog.title}}</h1>
      {{/if}}

    </a>
  </div>
  <div class="MainMenu-search">
    <a href="#" class="MainMenu-iconSearch" id="js-ShowSearch">
      <i class="fa fa-search"></i>
    </a>
  </div>
</div>
